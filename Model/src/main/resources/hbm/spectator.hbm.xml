<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="seatsreservations.domain.Spectator"
           table="SPECTATORS">
        <id name="username" column="USERNAME">
        </id>
        <property
                name="password"
                column="PASSWORD"/>
        <property
                name="name"
                column="NAME"/>
    </class>
</hibernate-mapping>